<TreeViewItem x:Class="Replay.Common.Wpf.CustomControls.WpfFolderBrowseDialog.CustomControls.TreeViewItemLabeled"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto"
             Width="Auto">
        <TreeViewItem.Header>
            <DockPanel Height="20"
                       VerticalAlignment="Bottom">
                <Image DockPanel.Dock="Left"
                       Name="Icon"
                       Height="15"
                       Width="15"
                       VerticalAlignment="Center"/>
                <TextBlock DockPanel.Dock="Left"
                           Name="HeaderText"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </TreeViewItem.Header>
</TreeViewItem>
